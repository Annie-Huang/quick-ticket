generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// cuid auto generate long string that contains letters and numbers
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Very nice that adding the last two lines in the Tcket model, save, and the below line will auto added.
  Ticket    Ticket[]
}

model Ticket {
  id          Int      @id @default(autoincrement())
  subject     String
  description String
  priority    String
  status      String   @default("Open")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // How to link the other table...
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
